@model Webshop_Kolb_Nussdorfer.Models.RegisterViewModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registrieren</h2>
<p>Kennwörter müssen eine Länge von mindestens @ViewData["PasswordLength"] Zeichen aufweisen</p>


